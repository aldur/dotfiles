{
  "Link": {
    "prefix": [
      "l",
      "link"
    ],
    "body": [
      "[${1:text}](${2:url}) ${0}"
    ],
    "description": "Add a link"
  },
  "Reference": {
    "prefix": [
      "r",
      "reference",
      "rfr"
    ],
    "body": [
      "[${1:text}][${2:reference}] ${0}",
      "",
      "[${2:reference}]: ${3:reference_text}"
    ],
    "description": "Add a link reference"
  },
  "URL": {
    "prefix": [
      "u",
      "url"
    ],
    "body": [
      "<${1}> ${0}"
    ],
    "description": "Add url"
  },
  "Image": {
    "prefix": "img",
    "body": [
      "![${1:alt text}](${2:path}) ${0}"
    ],
    "description": "Add image"
  },
  "Centered Image": {
    "prefix": [
      "imgc",
      "cimg"
    ],
    "body": [
      "![${1:alt text}]({% link /images/${2:filename.webp} %}){:.centered style=\"width: ${3:70}%; border-radius: 10px;\"}",
      "_${4:caption}_",
      "${0}"
    ],
    "description": "Add centered image with caption (Jekyll)"
  },
  "References": {
    "prefix": "refh",
    "body": [
      "## References",
      "",
      "- [${1:text}](${2:url}) ${0}"
    ],
    "description": "Reference under header"
  },
  "Footnote": {
    "prefix": [
      "fnt",
      "footnote"
    ],
    "body": [
      "[^${1:reference}] ${0}",
      "",
      "[^${1:reference}]: ${2:text}"
    ],
    "description": "Reference under header"
  },
  "Collapsible": {
    "prefix": [
      "collapsible",
      "details"
    ],
    "body": [
        "<details markdown=1>",
        "<summary markdown=span>${1:summary}</summary>",
        "${0}",
        "</details>"
    ],
    "description": "Reference under header"
  },
  "Markdownlint Disable Next Line": {
    "prefix": [
      "mdln",
      "mdl-next"
    ],
    "body": [
      "<!-- markdownlint-disable-next-line ${1:MD033} -->",
      "${0}"
    ],
    "description": "Disable markdownlint rule for next line"
  },
  "Markdownlint Disable Section": {
    "prefix": [
      "mdls",
      "mdl-section"
    ],
    "body": [
      "<!-- markdownlint-disable ${1:MD033} -->",
      "${0}",
      "<!-- markdownlint-enable ${1:MD033} -->"
    ],
    "description": "Disable markdownlint rule for a section"
  },
  "Markdownlint Disable All Next Line": {
    "prefix": [
      "mdla",
      "mdl-all"
    ],
    "body": [
      "<!-- markdownlint-disable-next-line -->",
      "${0}"
    ],
    "description": "Disable all markdownlint rules for next line"
  },
  "Markdownlint Disable File": {
    "prefix": [
      "mdlf",
      "mdl-file"
    ],
    "body": [
      "<!-- markdownlint-disable ${1:MD033} -->",
      "${0}"
    ],
    "description": "Disable markdownlint rule for entire file"
  }
}
